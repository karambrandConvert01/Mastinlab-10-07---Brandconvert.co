/* New Mega Menu Style Start */
.megamenuContainer {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.megamenuWrapper {
  flex: 1 1 20%;
  max-width: 20%;
  padding: 15px;
}
.megamenuTitle {
  font-size: 1.125rem;
  font-weight: bold;
}
.megamenuContent {
  font-size: 0.9375rem;
}
.megamenuLink a {
  color: #2274A5;
  font-size: 1rem;
  font-weight: bold;
}
.header-layout .custom_dropdown .site-nav--is-megamenu .site-nav__dropdown .megamenuLink a:focus,
.header-layout .custom_dropdown .site-nav--is-megamenu .site-nav__dropdown .megamenuLink a:hover {
  color: #474747 !important;
}
/* New Mega Menu Style End */