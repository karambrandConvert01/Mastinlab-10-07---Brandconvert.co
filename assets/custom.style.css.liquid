/* New Mega Menu Style Start */
.header-layout .custom_dropdown .site-nav__dropdown.megamenu.styled_megamenu {
  background-color: transparent !important;
  box-shadow: none;
}
.megamenuContainer {
  background-color:#F7F6F1;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  max-width: 55.4375rem;
  margin: 0 auto;
  padding: 2.5rem 3.625rem;
}
.megamenuWrapper {
  flex: 1 1 33.33%;
  max-width: 33.33%;
  padding: 0 1.5rem;
}
.megamenuTitle {
  color: #000;
  font-size: 1.125rem;
  font-weight: 700;
  line-height: 1.5;
  text-transform: uppercase;
}
.megamenuContent {
  color: #8b8787;
  font-size: 0.875rem;
  font-weight: 400;
  line-height: 1.5;
}
.megamenuLink {
  line-height: 1.5;
  margin-top: 0.5rem;
}
.megamenuLink a {
  color: #3B72A1;
  font-size: 0.75rem;
  font-style: italic;
  font-weight: 600;
  text-transform: uppercase;
}
.header-layout .custom_dropdown .site-nav--is-megamenu .site-nav__dropdown .megamenuLink a:focus,
.header-layout .custom_dropdown .site-nav--is-megamenu .site-nav__dropdown .megamenuLink a:hover {
  color: #474747 !important;
}
/* New Mega Menu Style End */

.gallery_content_info {
  background-color: rgb(71, 71, 71, 0.84);
}
.bestSellerItem::before {
  background-color: #F45332;
  color: #fff;
  content: attr(data-tag);
  font-family: Work Sans;
  font-size: 13px;
  font-weight: 500;
  left: 0;
  letter-spacing: 0.15em;
  line-height: 1;
  padding: .5em .75em;
  position: absolute;
  text-transform: uppercase;
  top: 1.625rem;
  z-index: 99;
}
.product_requirementsContent {
  display: none;
}