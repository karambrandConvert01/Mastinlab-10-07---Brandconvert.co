<div class="hideforlive"  id="dp__{{section.id}}">
{%if section.settings.divider %}<div class="section--divider">{% endif %}
{%if section.settings.space_around %}<div class="index-section">{% endif %}  
<div class="page-width ">
  <div class="inner-page-width custom_background">
  <h1 class="">{{section.settings.section_title}}</h1>
  <div class="grid grid--uniform">
  {%if section.blocks.size == 1%}
  	{%assign classs=" medium-up--one-whole"%}
  {%elsif section.blocks.size == 2%}
  {%assign classs=" medium-up--one-half "%}
  {%elsif section.blocks.size == 3 or section.blocks.size == 6%}
  	{%assign classs=" medium-up--one-third"%}
   
  {%else%}
  	{%assign classs=" medium-up--one-quarter "%}
  {%endif%}
  {%if section.id=="whatisinclude-pro-33379554707538"%}
    {%assign classs=" medium-up--one-half "%}
  {%endif%}
  {%for block in section.blocks %}
  <div class="grid__item {{classs}}">
    <div class="dp__include_box" >
      <h2>{{block.settings.include_title}}</h2>
      {%if block.settings.include_image %}
      {%- assign image = block.settings.include_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}

        <img class="lazyload"
                data-src="{{ image  }}"
                data-widths="[360, 540, 720, 900, 1080, 1600]"
                data-aspectratio="{{ block.settings.include_image.aspect_ratio }}"
                data-sizes="auto"
                alt="{{ block.settings.include_image.alt }}"> 
        {%endif%}
      <div style="max-width:{{block.settings.max_width}};margin:auto;">
        {{block.settings.include_content}}
      </div>
  	  </div>
   </div>
  {%endfor%}
   </div>
  </div>
</div>

{%if section.settings.space_around %}</div>{% endif %}
{%if section.settings.divider %}</div>{% endif %}
</div>
{% style %}
#dp__{{section.id}}{
padding:{{section.settings.padding}};
}
#dp__{{section.id}} .custom_background{
position:relative;
background-color:{{section.settings.background_color}};
}
#dp__{{section.id}} h1{
position:absolute;
top:0px;
transform:translateY(-50%);
padding-left:30px;
}
#dp__{{section.id}}  .dp__include_box{
padding:{{section.settings.content_padding}};
text-align:{{section.settings.text_align}};
margin:auto;
}
#dp__{{section.id}}  .dp__include_box img{
max-width:300px;
margin:auto;
}

@media only screen and (max-width: 768px) {
#dp__{{section.id}}{
padding:{{section.settings.mobile_padding}};
}

#dp__{{section.id}}  .dp__include_box{
padding:{{section.settings.content_mobile_padding}};
}
}
{% endstyle %}