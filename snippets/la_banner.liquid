{%- if section.settings.enable == false and request.design_mode == false -%}
{%-else-%}
<div class="dp-section-wrapper" id="dp_la_{{section.id}}">
  <div class="page-width">
    <div class="custom-content relative_div">
      	{%if section.settings.background_image%}
    	<div class="grid__image-ratio background_div grid__image-ratio--cover lazyload"
                data-bgset="{% include 'bgset', image: section.settings.background_image %}"
                data-sizes="auto"></div>
        {%endif%}
        <div class="content_wrapper">
         {%if section.settings.headline != ""%}<h3>{{section.settings.headline}}</h3>{%endif%}
         {%if section.settings.title != ""%}<h2>{{section.settings.title}}</h2>{%endif%}
         {%if section.settings.description != ""%}<p>{{section.settings.description}}</p>{%endif%}
         {%if section.settings.form_code != ""%}<div class="main_form">
           <div class="{{section.settings.form_code}}"></div>
         </div>
          {%endif%}
      	</div>
    </div>
  </div>
</div>
{% style %}
#dp_la_{{section.id}}{
 color:{{section.settings.border_color}};
}
#dp_la_{{section.id}} .relative_div .content_wrapper{
 border-color:{{section.settings.border_color}};
}
#dp_la_{{section.id}}  form{
	border: 2px solid {{section.settings.border_color}};
	padding:0px !important;
}
#dp_la_{{section.id}} input[type="email"]{
	border:none;
    height: 45px;
	line-height:45px;
	width:280px;
	text-align:left;
	padding-left:5px;
	background-color:transparent;
	margin-right:10px;
	
}
#dp_la_{{section.id}} input[type="email"]::-webkit-input-placeholder { /* Edge */
  color:{{section.settings.border_color}};
}

#dp_la_{{section.id}} input[type="email"]:-ms-input-placeholder { /* Internet Explorer 10-11 */
  color:{{section.settings.border_color}};
}

#dp_la_{{section.id}} input[type="email"]::placeholder {
  color:{{section.settings.border_color}};
}

#dp_la_{{section.id}} .main_form button{
 background-color:{{section.settings.button_color}};
 border-color:{{section.settings.button_color}};
    font-family: 'Work Sans', sans-serif;
    text-transform: uppercase;
    text-align: center;
    white-space: normal;
    font-size: 14px;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    display: inline-block;
    padding: 11px 20px;
    margin: 0;
    width: auto;
    min-width: 90px;
    vertical-align: middle;
    cursor: pointer;
}
#dp_la_{{section.id}} .background_div{
 position:absolute;
 width:100%;
 height:100%;
 top:0px;
 left:0px;
}
.page-container #dp_la_{{section.id}} .relative_div{
  margin:{{section.settings.margin}} !important;
}
.page-container #dp_la_{{section.id}} .relative_div .content_wrapper{
  margin:{{section.settings.padding_content}} !important;
}
@media only screen and (max-width: 768px) {
  #dp_la_{{section.id}}  form{
	border: none !important;
	padding:50px 20px !important;
 }
#dp_la_{{section.id}} input[type="email"]{
border: 2px solid {{section.settings.border_color}};
}
  .page-container #dp_la_{{section.id}} .relative_div{
    margin:{{section.settings.mobile_margin}} !important;
  }
  .page-container #dp_la_{{section.id}} .relative_div .content_wrapper{
    margin:{{section.settings.mobile_content_padding}} !important;
  }
}
{% endstyle %}
{%endif%}
