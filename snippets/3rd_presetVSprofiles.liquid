{%- if section.settings.enable == false and request.design_mode == false -%}
{%-else-%}
<div class="dp-section-wrapper n3rd_sections n3rd_desktop_presets" id="dp__{{section.id}}" >
  <div class="page-width">
    <div class="inner-page-width">
      <h2 class="toggle_title {%unless section.settings.default_open %} tactive {%endunless%} toggle_button" style="{%if section.settings.background_color != ""%}background-color:{{section.settings.hbackground_color}};color:{{section.settings.htext_color}};{%endif%}">
        {%include "plus_svg"%}
         {{section.settings.headline}}</h2>
      <div class="toggle_content " style="{% if request.design_mode %}max-height: 100% !important;{%endif%}{%if section.settings.background_color != ""%}background-color:{{section.settings.background_color}};color:{{section.settings.text_color}}{%endif%}">
        <div class="toggle_inner">
        <div class="grid grid--uniform">
          <div class="grid__item  medium-up--four-twelfths">
            <div class="left-content-wrapper">
              <h3>{{section.settings.title}}</h3>
            </div>
          </div>
          <div class="grid__item  medium-up--eight-twelfths">
              <div class="right-content-wrapper">
                {{section.settings.content}}
              </div>
          </div>
        </div>
        <div class="grid grid--uniform">
          <div class="grid__item  medium-up--four-twelfths">
            <div class="left-content-wrapper">
              <h3>{{section.settings.stitle}}</h3>
            </div>
          </div>
          <div class="grid__item  medium-up--eight-twelfths">
              <div class="right-content-wrapper">
                {{section.settings.scontent}}
              </div>
          </div>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% style %}
#dp__{{section.id}} .inner-page-width{
  padding:{{section.settings.padding}};
}
#dp__{{section.id}}  .right-content-wrapper,#dp__{{section.id}}  .left-content-wrapper{
	padding:{{section.settings.cpadding}};
}
@media only screen and (max-width: 768px) {
  #dp__{{section.id}} .inner-page-width{
    padding:{{section.settings.mobile_padding}};
  }
#dp__{{section.id}}  .right-content-wrapper,#dp__{{section.id}}  .left-content-wrapper{
	padding:{{section.settings.cmobile_padding}};
}
}
{% endstyle %}{%endif%}