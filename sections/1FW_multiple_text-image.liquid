<div class="dp-section-wrapper fw_multiple_text-image fw-sections" id="dp__{{section.id}}">
  <div class="page-width">
  {%if section.settings.headline != ""%}
  <h2 class="text-center">{{section.settings.headline}}</h2>
  {%endif%}
  {%if section.settings.description != ""%}
  <p class="text-center">{{section.settings.description}}</p>
  {%endif%}
  </div>
  {% for block in section.blocks %}
  {%if block.settings.mobile_padding != ""%}
  <style>
    @media screen and (max-width:768px){
      #group__{{block.id}}{
        padding:{{block.settings.mobile_padding}} !important;
      }
    }
 </style>
  {%endif%}
  <div class="group_single" id="group__{{block.id}}" style="background-color:{{block.settings.background_color}};color:{{block.settings.color}};padding:{{block.settings.padding}}">
    <div class="page-width">
      <div class="inner-page-width">
        <div class="grid flex-display grid--uniform " >
		  {%if block.settings.image_on_left%}
          <div class="grid__item image_order medium-up--six-twelfths">
            <div class="right-content-wrapper">
              {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                  <img class="lazyload"
                      data-src="{{ img_url }}"
                      data-widths="[360, 540, 720, 900, 1080, 1600]"
                      data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                      data-sizes="auto"
                      alt="{{ block.settings.image.alt }}">
            </div>
          </div>
		  {%endif%}
          <div class="grid__item text_order medium-up--six-twelfths">
            <div class="left-content-wrapper text-box-layout text-{{block.settings.text_algin}}">
              {{block.settings.code}}
            </div>
          </div>
		  {%unless block.settings.image_on_left%}
          <div class="grid__item image_order medium-up--six-twelfths">
            <div class="right-content-wrapper">
              {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                  <img class="lazyload"
                      data-src="{{ img_url }}"
                      data-widths="[360, 540, 720, 900, 1080, 1600]"
                      data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                      data-sizes="auto"
                      alt="{{ block.settings.image.alt }}">
            </div>
          </div>
		  {%endunless%}

        </div>
      </div>
    </div>
  </div>
  {%endfor%}
</div>
{% schema %}
  {
    "name": "Multiple Text-Image(FW)",
    "settings": [
		{
          "type": "text",
          "id": "headline",
          "label": "Section Title",
		  "default":"What else do I get for signing up?"
        },
		{
          "type": "text",
          "id": "description",
          "label": "Description",
		  "default":"Weâ€™re glad you asked."
        }
	],
    "blocks": [
      {
        "type": "textimage",
        "name": "Text&Image",
        "settings": [
		  {
            "type": "header",
            "content": "padding Setting"
          },
          {
            "type": "text",
            "id": "padding",
            "label": "Desktop Padding",
            "default": "0px 0px 0px 0px",
            "info" : "Top right bottom left"
          },
          {
            "type": "text",
            "id": "mobile_padding",
            "label": "Mobile Padding",
            "default": "0px 0px 0px 0px",
            "info" : "Top right bottom left"
          },
		  {
            "type": "header",
            "content": "Block Setting"
          },
		  {
            "type": "color",
            "id": "background_color",
            "label": "Background Color"
          },
		  {
            "type": "color",
            "id": "color",
            "label": "Color"
          },
		  {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
		  {
            "type": "checkbox",
            "id": "image_on_left",
            "label": "Image on left",
			"default":true
          },
          {
            "type": "html",
            "id": "code",
            "label": "HTML",
            "default": "<h2>Preview weekly live edits</h2><p>Lorem ipsum dolor sit amet, consectetur adipisicing elit</p>"
          },
		  {
           "type": "select",
           "id": "text_algin",
           "label": "Text lign",
           "options": [
             {
               "value": "left",
               "label": "Left"
             },
             {
               "value": "center",
               "label": "Center"
             },
             {
               "value": "right",
               "label": "Right"
             }
           ],
           "default": "left",
           "info": "text"
        }
        ]
      }
    ],
	"presets": [
      {
        "name": "Multiple Text-Image(FW)",
        "category": "3rd Design"
      }
    ]
  }
{% endschema %}
