{%- if section.settings.enable == false and request.design_mode == false -%}
{%-else-%}
<div class="dp-section-wrapper n3rd_one_click" id="dp__{{section.id}}" >
  <div class="page-width">
    <div class="inner-page-width" style="border-top:1px solid {{section.settings.border_color}}">
      <h2 class="toggle_title">{{section.settings.headline}}</h2>
      <div class="toggle_content">
        {%if section.settings.description %}<div class="n3rd_description">{{section.settings.description}}</div>{%endif%}
        <div class="toggle_inner text-center">
          
        <div class="grid grid--uniform">
          <div class="grid__item  medium-up--one-third">
            <div class="content-wrapper">
              {%- assign img_url = section.settings.fimage | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
          		<img class="lazyload"
               data-src="{{ img_url }}"
               data-widths="[360, 540, 720, 900, 1080, 1600]"
               data-aspectratio="{{ section.settings.fimage.aspect_ratio }}"
               data-sizes="auto"
               alt="{{ section.settings.fimage.alt }}">
              
              <p class="head_line">{{section.settings.ftitle}}</p>
               {{section.settings.fcontent}}
            </div>
          </div>
          <div class="grid__item  medium-up--one-third">
              <div class="content-wrapper">
                {%- assign img_url = section.settings.simage | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
          		<img class="lazyload"
               data-src="{{ img_url }}"
               data-widths="[360, 540, 720, 900, 1080, 1600]"
               data-aspectratio="{{ section.settings.simage.aspect_ratio }}"
               data-sizes="auto"
               alt="{{ section.settings.simage.alt }}">
               	<p class="head_line">{{section.settings.stitle}}</p>
               {{section.settings.scontent}}
              </div>
          </div>
          <div class="grid__item  medium-up--one-third">
            <div class="content-wrapper">
              {%- assign img_url = section.settings.timage | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
          		<img class="lazyload"
               data-src="{{ img_url }}"
               data-widths="[360, 540, 720, 900, 1080, 1600]"
               data-aspectratio="{{ section.settings.timage.aspect_ratio }}"
               data-sizes="auto"
               alt="{{ section.settings.timage.alt }}">
              <p class="head_line">{{section.settings.ttitle}}</p>
               {{section.settings.tcontent}}
            </div>
          </div>
          
        </div>
        <div class="grid grid--uniform">
          
          <div class="grid__item  medium-up--one-third">
              <div class="content-wrapper">
                {%- assign img_url = section.settings.foimage | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
          		<img class="lazyload"
               data-src="{{ img_url }}"
               data-widths="[360, 540, 720, 900, 1080, 1600]"
               data-aspectratio="{{ section.settings.foimage.aspect_ratio }}"
               data-sizes="auto"
               alt="{{ section.settings.foimage.alt }}">
                <p class="head_line">{{section.settings.fotitle}}</p>
               {{section.settings.focontent}}
              </div>
          </div>
          <div class="grid__item  medium-up--one-third">
            <div class="content-wrapper">
              {%- assign img_url = section.settings.fiimage | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
          		<img class="lazyload"
               data-src="{{ img_url }}"
               data-widths="[360, 540, 720, 900, 1080, 1600]"
               data-aspectratio="{{ section.settings.fiimage.aspect_ratio }}"
               data-sizes="auto"
               alt="{{ section.settings.fiimage.alt }}">
              <p class="head_line">{{section.settings.fititle}}</p>
               {{section.settings.ficontent}}
            </div>
          </div>
          <div class="grid__item  medium-up--one-third">
              <div class="content-wrapper">
                {%- assign img_url = section.settings.siimage | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
          		<img class="lazyload"
               data-src="{{ img_url }}"
               data-widths="[360, 540, 720, 900, 1080, 1600]"
               data-aspectratio="{{ section.settings.siimage.aspect_ratio }}"
               data-sizes="auto"
               alt="{{ section.settings.siimage.alt }}">
                <p class="head_line">{{section.settings.sititle}}</p>
               {{section.settings.sicontent}}
              </div>
          </div>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% style %}
#dp__{{section.id}}{
 background-color:{{section.settings.background_color}};
 color:{{section.settings.text_color}};
}
#dp__{{section.id}} .inner-page-width{
	padding:{{section.settings.padding}}
}
@media only screen and (max-width: 768px) {
  #dp__{{section.id}} .inner-page-width{
  	padding:{{section.settings.mobile_padding}};
  }
}
#dp__{{section.id}} .content-wrapper img{
 margin-left:auto;
margin-right:auto;
}
{% endstyle %}
{%endif%}
