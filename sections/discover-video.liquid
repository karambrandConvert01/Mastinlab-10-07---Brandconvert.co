{%include "discover-video"%}
{% schema %}
  {
    "name": "Video with text",
    "class": "index-section",
    "settings": [
      {
        "type": "video_url",
        "id": "video_url",
        "label": "Video url",
		"accept": ["youtube", "vimeo"]
      },
	  {
        "type": "image_picker",
        "id": "video_image",
        "label": "Image overlay"
      },
	  {
        "type": "header",
        "content": "Padding Setting"
      },
	  {
        "type": "text",
        "id": "padding",
        "label": "Desktop Padding",
        "default": "0px 0px 0px 0px",
		"info" : "Top right bottom left"
      },
	  {
        "type": "text",
        "id": "mobile_padding",
        "label": "Mobile Padding",
        "default": "0px 0px 0px 0px",
		"info" : "Top right bottom left"
      },
	  {
        "type": "header",
        "content": "Video Padding Setting"
      },
	  {
        "type": "text",
        "id": "vpadding",
        "label": "Desktop Padding",
        "default": "0px 0px 0px 0px",
		"info" : "Top right bottom left"
      },
	  {
        "type": "text",
        "id": "vmobile_padding",
        "label": "Mobile Padding",
        "default": "0px 0px 0px 0px",
		"info" : "Top right bottom left"
      },
	  {
        "type": "color",
        "id": "background_color",
        "label": "Custom background color ",
        "default": "#ffffff"
      },
      {
        "type": "range",
        "id": "image_width",
        "label": "Video width",
        "default": 500,
        "min": 100,
        "max": 500,
        "step": 10,
        "unit": "px"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subheading",
        "default": "Improved"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Image with text"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Pair large text with an image to tell a story, explain a detail about your product, or describe a new promotion.</p>"
      },
	  {
        "type": "select",
        "id": "text_align",
        "label": "Text align",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
		  {
            "value": "right",
            "label": "Right"
          }
        ]
      },
	  {
        "type": "select",
        "id": "text_align_self",
        "label": "Text align self",
        "default": "center",
        "options": [
          {
            "value": "top",
            "label": "Top"
          },
          {
            "value": "center",
            "label": "Center"
          },
		  {
            "value": "bottom",
            "label": "Bottom"
          }
        ]
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label",
        "default": "Optional button"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      },
	  {
        "type": "color",
        "id": "btn_color",
        "label": "Buttons color",
        "default": "rgba(0,0,0,1)"
      },
	  {
        "type": "color",
        "id": "btn_color_border",
        "label": "Buttons border color",
        "default": "rgba(0,0,0,1)"
      },
	  {
        "type": "color",
        "id": "btn_color_bg",
        "label": "Buttons background color",
        "default": "rgba(0,0,0,0)"
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Layout",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Video on left"
          },
          {
            "value": "right",
            "label": "Video on right"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "divider",
        "label": "Show section divider",
        "default": false
      }
    ],
    "presets": [
      {
        "name": "Discover Video",
        "category": "Deprohoang Sections"
      }
    ]
  }
{% endschema %}
