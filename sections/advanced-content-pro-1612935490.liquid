{% style %}
#shopify-section-{{ section.id }} .custom__item-inner button.needsclick {
  border: none !important;
  border-radius: 0;
  box-sizing: border-box;
  font-family: 'Work Sans',sans-serif;
  font-weight: 700;
  height: 100%;
  letter-spacing: .1265em;
  overflow: hidden;
  position: relative;
  text-align: center;
  text-decoration: none;
  text-transform: uppercase;
}
#shopify-section-{{ section.id }} .custom__item-inner button.needsclick::after {
  background-image: linear-gradient(to right,transparent,rgba(255,255,255,.25),transparent);
  content: '';
  height: 100%;
  left: 150%;
  position: absolute;
  top: 0;
  transform: skewX(-20deg);
  width: 200%;
}
#shopify-section-{{ section.id }} .custom__item-inner button.needsclick:hover::after {
  animation: shine .75s cubic-bezier(.01,.56,1,1);
}
{% endstyle %}