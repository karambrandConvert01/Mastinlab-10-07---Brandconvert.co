{%include "photographers_says"%}
{% schema %}
  {
    "name": "Photographers Says",
    "class": "index-section",
    "settings": [
      {
        "type": "checkbox",
        "id": "divider",
        "label": "Show section divider",
        "default": false
      },
	  {
        "type": "text",
        "id": "padding",
        "label": "Custom Padding ",
        "default": "0px 0px 0px 0px",
        "info" : "Top right bottom left"
      },
	  {
        "type": "text",
        "id": "mobile_padding",
        "label": "Mobile Padding",
        "default": "0px 0px 0px 0px",
		"info" : "Top right bottom left"
      }
    ],
	"blocks":[
		{
		"type": "content",
        "name": "Content",
		"settings":[
		  {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "range",
            "id": "image_width",
            "label": "Image width",
            "default": 700,
            "min": 100,
            "max": 700,
            "step": 10,
            "unit": "px"
          },
		  {
            "type": "select",
            "id": "layout",
            "label": "Layout",
            "default": "left",
            "options": [
              {
                "value": "left",
                "label": "Image on left"
              },
              {
                "value": "right",
                "label": "Image on right"
              }
            ]
          },
          {
            "type": "text",
            "id": "text",
            "label": "Text",
            "default": "TBD - quote or accomplishment from community member."
          },
          {
            "type": "text",
            "id": "name",
            "label": "Photographer Name",
            "default": "CHRISTINA QUESENBERRY,"
          },
          {
            "type": "text",
            "id": "address",
            "label": "Photographer text",
            "default": "COMMUNITY MEMBER SINCE 20XX"
          },
          {
            "type": "image_picker",
            "id": "bgimage",
            "label": "Background Image"
          },
          {
            "type": "color",
            "id": "text_color",
            "label": "Testimonial text color ",
            "default": "#f4f4f4"
          }
          
		]
	  }
	]
  }
{% endschema %}
