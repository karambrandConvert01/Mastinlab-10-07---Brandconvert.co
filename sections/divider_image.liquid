<div id="dp__{{ section.id }}" style="text-align:center;">
  {%if section.settings.image %}
      {%- assign image = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}

        <img class="lazyload"
                data-src="{{ image  }}"
                data-widths="[900]"
                data-aspectratio="{{ section.settings.image.aspect_ratio }}"
                data-sizes="auto"
                alt="{{ section.settings.image.alt }}"> 
        {%endif%}
</div>
{% style %}
  #dp__{{section.id}}{
	padding:{{section.settings.padding}};
	background-color:{{section.settings.background_color}};
  }
#dp__{{section.id}} img{
	width:{{section.settings.width}} !important;
	margin:auto;
}
@media only screen and (max-width: 768px) {
	#dp__{{section.id}}{
      padding:{{section.settings.mobile_padding}};
    }
  }
{% endstyle %}
{% schema %}
  {
    "name": "Divider image",
    "settings": [
		{
            "type": "image_picker",
            "id": "image",
            "label": "Select Divider Image"
        },
		{
            "type": "text",
            "id": "width",
            "label": "Image width",
			"default":"200px"
        },
        {
          "type": "header",
          "content": "Padding Setting"
        },
        {
          "type": "text",
          "id": "padding",
          "label": "Desktop Padding",
          "default": "0px 0px 0px 0px",
          "info" : "Top right bottom left"
        },
        {
          "type": "text",
          "id": "mobile_padding",
          "label": "Mobile Padding",
          "default": "0px 0px 0px 0px",
          "info" : "Top right bottom left"
        }
	],
	"presets": [
      {
        "name": "Divider image",
        "category": "Deprohoang Sections"
      }
    ]
  }
{% endschema %}



