  #shopify-section-{{ section.id }} > .index-section .rte p,
  #shopify-section-{{ section.id }} > .index-section .rte table,
  #shopify-section-{{ section.id }} > .index-section .rte ul {
    margin-bottom: {{ section.settings.spaceBetweenParagraphs }}em;
