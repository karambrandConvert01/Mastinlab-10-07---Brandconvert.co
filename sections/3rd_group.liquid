  {
    "name": "Presets",
    "settings": [
{
          "type": "checkbox",
          "id": "enable",
          "label": "Display for live site?",
		      "default":true
        },
        {
          "type": "checkbox",
          "id": "default_open",
          "label": "default hide?",
		  "default":true
        },
		{
          "type": "text",
          "id": "headline",
          "label": "Section Title",
		  "default":"Desktop Presets"
        },
		{
          "type": "color",
          "id": "backround_color",
          "label": "Background Color"
        },
	    {
          "type": "color",
          "id": "text_color",
          "label": "Text Color"
        },{
          "type": "color",
          "id": "hbackground_color",
          "label": "Toggle Background Color"
