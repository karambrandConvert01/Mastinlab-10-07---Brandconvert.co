		{
          "type": "color",
          "id": "htext_color",
          "label": "Toggle Text Color",
		  "default":"#cccccc"
        }
	],
	"blocks": [
      {
        "type": "textimage",
        "name": "Text&Image",
        "settings": [
		  {
            "type": "header",
            "content": "padding Setting"
          },
          {
            "type": "text",
            "id": "padding",
            "label": "Desktop Padding",
            "default": "0px 0px 0px 0px",
            "info" : "Top right bottom left"
          },
          {
            "type": "text",
            "id": "mobile_padding",
            "label": "Mobile Padding",
            "default": "0px 0px 0px 0px",
            "info" : "Top right bottom left"
          },
		  {
            "type": "header",
            "content": "Block Setting"
          },
		  {
            "type": "color",
            "id": "background_color",
            "label": "Background Color"
          },
		  {
            "type": "color",
            "id": "color",
            "label": "Color"
          },
		  {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
		  {
            "type": "checkbox",
            "id": "image_on_left",
            "label": "Image on left",
			"default":true
          },
          {
            "type": "html",
            "id": "code",
            "label": "HTML",
            "default": "<h2>Preview weekly live edits</h2><p>Lorem ipsum dolor sit amet, consectetur adipisicing elit</p>"
          },
		  {
           "type": "select",
           "id": "text_algin",
           "label": "Text lign",
           "options": [
             {
               "value": "left",
               "label": "Left"
             },
             {
               "value": "center",
               "label": "Center"
             },
             {
               "value": "right",
               "label": "Right"
             }
           ],
           "default": "left",
           "info": "text"
        }
        ]
      }
    ],
	"presets": [
      {
        "name": "group text&image",
        "category": "3rd Design"
      }
    ]
